{
  "name": "booking-system",
  "version": "1.0.0",
  "license": "UNLICENSED",
  "private": true,
  "repository": "github:lieuvu/booking-system",
  "dependencies": {
    "ajv": "8.6.0",
    "express": "4.17.1",
    "query-string": "7.0.1",
    "luxon": "1.27.0",
    "morgan-body": "2.6.6",
    "slonik": "23.8.3",
    "slonik-sql-tag-raw": "1.1.1",
    "swagger-ui-express": "4.1.6",
    "yamljs": "0.3.0",
    "winston": "3.3.3"
  },
  "devDependencies": {
    "@slonik/migrator": "0.8.3",
    "@types/express": "4.17.12",
    "@types/jest": "26.0.23",
    "@types/luxon": "1.27.0",
    "@types/slonik": "22.1.4",
    "@types/supertest": "2.0.11",
    "@types/swagger-ui-express": "4.1.3",
    "@types/yamljs": "0.2.31",
    "@typescript-eslint/eslint-plugin": "4.28.1",
    "@typescript-eslint/parser": "4.28.1",
    "eslint": "7.30.0",
    "jest": "27.0.6",
    "module-alias": "2.2.2",
    "nodemon": "2.0.9",
    "supertest": "6.1.3",
    "ts-node": "10.0.0",
    "ts-jest": "27.0.3",
    "typescript": "4.3.5"
  },
  "_moduleAliases": {
    "@src": "src",
    "@common": "src/common",
    "@controllers": "src/controllers",
    "@interfaces": "src/interfaces",
    "@models": "src/models",
    "@routes": "src/routes",
    "@schemas": "src/schemas"
  },
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "**/*.map"
    ],
    "delay": "2500",
    "watch": [
      "src/",
      "docs/"
    ],
    "ext": "ts,json,yml"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "compose:build": "docker-compose build --force-rm --no-cache --pull",
    "compose:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up --abort-on-container-exit",
    "compose:test": "docker-compose -f docker-compose.yml -f docker-compose.test.yml up --abort-on-container-exit",
    "db:migrate": "ts-node src/db/migrate up",
    "db:migrate:reset": "ts-node src/db/migrate down 0 && npm run db:migrate",
    "dev": "nodemon --exec 'npm run lint && npm start'",
    "lint": "eslint . --ext .ts --color",
    "start": "ts-node src/server.ts",
    "test": "jest --colors"
  }
}
