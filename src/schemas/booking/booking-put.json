{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Booking-Put",
  "description": "Booking schema of a booking system when making a put request.",
  "allOf": [
    { "$ref": "booking-common.json#/definitions/booking" },
    {
      "type": "object",
      "minProperties": 1,
      "anyOf": [
        { "required": ["machine_id"] },
        { "required": ["building_id"] },
        { "required": ["number"] },
        { "required": ["status"] }
      ]
    }
  ]
}
