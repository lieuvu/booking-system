{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "User-Put",
  "description": "User schema of a booking system when making a put request.",
  "allOf": [
    { "$ref": "user-common.json#/definitions/user" },
    {
      "type": "object",
      "minProperties": 1,
      "anyOf": [
        { "required": ["first_name"] },
        { "required": ["last_name"] },
        { "required": ["email"] },
        { "required": ["password"] }
      ]
    }
  ]
}
