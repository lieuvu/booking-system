{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "user-address-common.json",
  "title": "User-Address-Common",
  "description": "Common user address schema of a booking system",
  "definitions": {
    "user-address": {
      "type": "object",
      "properties": {
        "user_id": {
          "description": "Id of the user.",
          "type": "integer",
          "exclusiveMinimum": 0
        },
        "building_id": {
          "description": "Id of the building where the user lives.",
          "type": "integer",
          "exclusiveMinimum": 0
        },
        "apartment_number": {
          "description": "Number of the apartment of the building where the user lives.",
          "type": "string",
          "minLength": 1
        }
      },
      "additionalProperties": false
    }
  }
}
