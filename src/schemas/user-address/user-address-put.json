{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "User-Address-Put",
  "description": "User address schema of a booking system when making a put request.",
  "allOf": [
    { "$ref": "user-address-common.json#/definitions/user-address" },
    {
      "type": "object",
