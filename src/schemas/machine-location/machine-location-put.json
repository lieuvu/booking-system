{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Machine-Location-Put",
  "description": "Machine location schema of a booking system when making a put request.",
  "allOf": [
    { "$ref": "machine-location-common.json#/definitions/machine-location" },
    {
      "type": "object",
      "minProperties": 1,
      "anyOf": [
